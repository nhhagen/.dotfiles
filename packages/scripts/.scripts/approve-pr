#!/usr/bin/env bash

query=${1}
author=${2}
body=${3}

gh search prs "${1}" --review-requested=@me --author="${2}" --owner="coopnorge" --limit=100 --state=open --checks=pending --json url --jq=".[].url" | xargs -I '{}' gh pr review {} -a -b "${body}"
gh search prs "${1}" --review-requested=@me --author="${2}" --owner="coopnorge" --limit=100 --state=open --checks=success --json url --jq=".[].url" | xargs -I '{}' gh pr review {} -a -b "${body}"
